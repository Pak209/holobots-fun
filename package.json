{
  "name": "holobots-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "dev:mobile": "turbo run dev --filter=mobile",
    "dev:web": "turbo run dev --filter=web",
    "build:mobile": "turbo run build --filter=mobile",
    "build:web": "turbo run build --filter=web"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@expo/ngrok": "^4.1.0",
    "@types/jest": "^29.5.14",
    "@types/react": "~18.3.12",
    "eslint": "^8.42.0",
    "prettier": "^3.0.0",
    "turbo": "^1.11.0",
    "typescript": "~5.3.3",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "type": "module"
}
